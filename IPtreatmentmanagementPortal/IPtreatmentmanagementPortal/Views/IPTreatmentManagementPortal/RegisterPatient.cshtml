<h1>RegisterPatient</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterPatient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ailment" class="control-label"></label>
                <input asp-for="Ailment" class="form-control" />
                <span asp-validation-for="Ailment" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="TreatmentPackageName" class="control-label"></label>
                <input asp-for="TreatmentPackageName" class="form-control" />
                <span asp-validation-for="TreatmentPackageName" class="text-danger"></span>*@
                <label  class="control-label">TreatmentPackageName</label>
                <select class="form-control" id="PackageName" asp-for="TreatmentPackageName">
                    <option>Select</option>
                    
                    <option> Package 1 </option>
                    <option> Package 2 </option>
                    
                </select>
                                   
            </div>
            <div class="form-group">
                <label asp-for="TreatmentCommencementDate" class="control-label"></label>
                <input asp-for="TreatmentCommencementDate" class="form-control" />
                <span asp-validation-for="TreatmentCommencementDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

